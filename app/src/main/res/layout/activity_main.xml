<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B2EBF2"
        android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:src="@drawable/img_1" />

    <TextView
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:layout_gravity="center"
        android:background="@color/teal_200"
        android:text="Happy birthday Rohan"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textStyle="italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.035"
        android:text="People invited to the party"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.035"
        android:text="1) Ishika Juneja"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.035"
        android:text="2)Sarthak Thombre"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.035"
        android:text="3)Raj Rajnandani,"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.035"
        android:text="4)Liana Petty"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>